{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:code-audit:internal:finding:v1",
  "title": "Internal Finding",
  "description": "Engine-internal finding shape â€” stricter than the public schema to enforce scanner provenance.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "finding_id",
    "type",
    "severity",
    "confidence",
    "location",
    "fingerprint"
  ],
  "properties": {
    "finding_id": {
      "type": "string",
      "minLength": 1
    },
    "type": {
      "type": "string",
      "minLength": 1
    },
    "severity": {
      "type": "string",
      "enum": ["info", "low", "medium", "high", "critical"]
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "location": {
      "type": "object",
      "additionalProperties": false,
      "required": ["path", "line_start", "line_end"],
      "properties": {
        "path": { "type": "string" },
        "line_start": { "type": "integer", "minimum": 1 },
        "line_end": { "type": "integer", "minimum": 1 }
      }
    },
    "fingerprint": {
      "type": "string",
      "minLength": 1
    },
    "message": { "type": "string" },
    "snippet": { "type": "string" },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    },
    "source": {
      "type": "object",
      "additionalProperties": false,
      "required": ["scanner", "scanner_version"],
      "properties": {
        "scanner": { "type": "string" },
        "scanner_version": { "type": "string" },
        "rule_id": { "type": "string" }
      }
    }
  }
}

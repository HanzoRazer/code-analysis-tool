{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "release_gate_envelope_schema_v1",
  "schema_version": "release_gate_envelope_schema_v1",
  "title": "Release Gate Envelope",
  "description": "Generic envelope for all release gate failure payloads. Gate-specific schemas use allOf to constrain kind and detail_kind.",
  "type": "object",
  "additionalProperties": false,
  "required": ["kind", "path", "expected", "got", "ci", "details"],
  "properties": {
    "kind": { "type": "string", "minLength": 1 },
    "path": { "type": "string", "minLength": 1 },
    "expected": {},
    "got": {},
    "ci": { "type": "boolean" },
    "details": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/detail_item" }
    }
  },
  "$defs": {
    "detail_item": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "path", "expected", "got"],
      "properties": {
        "kind": { "type": "string", "minLength": 1 },
        "path": { "type": "string", "minLength": 1 },
        "expected": {},
        "got": {},
        "details": {}
      }
    }
  }
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/HanzoRazer/code-analysis-tool/schemas/rule_registry.schema.json",
  "title": "Rule Registry",
  "description": "Canonical list of rule IDs emitted by code-analysis-tool",
  "type": "object",
  "required": ["supported_rule_ids"],
  "additionalProperties": false,
  "properties": {
    "supported_rule_ids": {
      "type": "array",
      "description": "Stable, public rule IDs safe for downstream consumption",
      "items": {
        "type": "string",
        "pattern": "^[A-Z]{2,4}_[A-Z][A-Z0-9_]*_[0-9]{3}$"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "experimental_rule_ids": {
      "type": "array",
      "description": "Unstable rule IDs that may change or be removed",
      "items": {
        "type": "string",
        "pattern": "^[A-Z]{2,4}_[A-Z][A-Z0-9_]*_[0-9]{3}$"
      },
      "uniqueItems": true
    },
    "deprecated_rule_ids": {
      "type": "array",
      "description": "Rule IDs scheduled for removal",
      "items": {
        "type": "string",
        "pattern": "^[A-Z]{2,4}_[A-Z][A-Z0-9_]*_[0-9]{3}$"
      },
      "uniqueItems": true
    }
  }
}

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "user_event_v1",
  "title": "UserEvents v1 â€” interaction event stream",
  "description": "Records user interactions with signals for confidence lift tracking (CLR). Each event captures a button click or signal interaction tied to a specific scan run.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "run_id",
    "events"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "user_event_v1"
    },
    "run_id": {
      "type": "string",
      "minLength": 1,
      "description": "Reference to RunResult.run.run_id"
    },
    "events": {
      "type": "array",
      "description": "Ordered list of user interactions",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "ts",
          "type",
          "signal_id"
        ],
        "properties": {
          "ts": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp of the interaction"
          },
          "type": {
            "type": "string",
            "enum": [
              "signal_fixed",
              "signal_deferred",
              "signal_acknowledged"
            ],
            "description": "Maps to primary/secondary/tertiary button clicks"
          },
          "signal_id": {
            "type": "string",
            "minLength": 1,
            "description": "Reference to the signal that was acted upon"
          },
          "meta": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
              "button": {
                "type": "string",
                "enum": ["primary", "secondary", "tertiary"],
                "description": "Which button tier was clicked"
              }
            }
          }
        }
      }
    }
  }
}
